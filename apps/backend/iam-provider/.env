# Environment
NODE_ENV=development
# Server
PORT=3010
# CORS
WHITE_LIST_URLS=http://localhost:3000,http://localhost:4200
# Database
MONGO_CONN_STRING=mongodb://localhost:27017/iam-provider
# JWT
JWT_SECRET=your-super-secret-jwt-key-minimum-32-chars
JWT_ACCESS_TOKEN_EXPIRES_IN_SECONDS=900          # 15 minutes (in seconds)
JWT_REFRESH_TOKEN_EXPIRES_IN_SECONDS=604800      # 7 days (in seconds)
# Security
MAX_FAILED_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
BCRYPT_ROUNDS=12
# OAuth Providers
#Google OAuth. Get credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3010/api/v1/oauth/google/callback
# GitHub OAuth. Get credentials at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:3010/api/v1/oauth/github/callback
# SMTP
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_FROM=noreply@iam-provider.local
# Account verification
EMAIL_VERIFICATION_TOKEN_EXPIRES_HOURS=24
INACTIVE_ACCOUNT_RETENTION_DAYS=30
# WebAuthN
WEBAUTHN_RELYING_PARTY_ID=localhost
WEBAUTHN_RELYING_PARTY_NAME=IAM Provider
WEBAUTHN_ORIGIN=http://localhost:3000
WEBAUTHN_CHALLENGE_TTL_SECONDS=10
#Redis
REDIS_URL=redis://localhost:6379
PASSWORD_RESET_TOKEN_EXPIRES_HOURS=1

MAX_ACTIVE_SESSIONS=1